<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GenderActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="31dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/logo"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:text="Desired league :"
            android:fontFamily="@font/montserrat" android:textSize="18sp" android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4">
        <ToggleButton
                android:text="Mens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toggleButton" android:textOff="Mens" android:textOn="Mens"
                android:background="@drawable/smoosh_toggle" android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat" android:textSize="14sp" android:textStyle="bold"
                android:textAllCaps="true"/>
        <ToggleButton
                android:text="Womens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton2" android:textOff="Womens"
                android:textOn="Womens" android:background="@drawable/smoosh_toggle"
                android:textColor="@android:color/white" android:fontFamily="@font/montserrat" android:textSize="14sp"
                android:textStyle="bold" android:textAllCaps="true" android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
        <ToggleButton
                android:text="Co-Ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/toggleButton3" android:textOff="Co-Ed"
                android:textOn="Co-Ed" android:background="@drawable/smoosh_toggle"
                android:textColor="@android:color/white" android:fontFamily="@font/montserrat" android:textSize="14sp"
                android:textStyle="bold" android:textAllCaps="true"/>
    </LinearLayout>
    <Button
            android:text="Next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3" android:background="@drawable/smoosh_button"
            android:fontFamily="@font/montserrat" android:textSize="18sp"
            android:textColor="@android:color/background_light"/>
</androidx.constraintlayout.widget.ConstraintLayout>
